@model AccountDetailsViewModel
@{
    ViewData["Title"] = "Account details";
}

<section class="account-details">
    <div class="container">
        @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["StatusMessage"]
            </div>
        }

        <form class="form-basic" method="post" asp-action="UpdateBasicInfo" asp-controller="Account">
            <h5>Basic Info</h5>
            <div class="form-content">
                <div id="form-firstname" class="input-group">
                    <label asp-for="Basic!.FirstName"></label>
                    <input asp-for="Basic!.FirstName" />
                    <span asp-validation-for="Basic!.FirstName"></span>
                </div>
                <div id="form-lastname" class="input-group">
                    <label asp-for="Basic!.LastName"></label>
                    <input asp-for="Basic!.LastName" />
                    <span asp-validation-for="Basic!.LastName"></span>
                </div>
                <div id="form-email" class="input-group">
                    <label asp-for="Basic!.Email"></label>
                    <input asp-for="Basic!.Email" />
                    <span asp-validation-for="Basic!.Email"></span>
                </div>
                <div id="form-phone" class="input-group">
                    <label asp-for="Basic!.PhoneNumber"></label>
                    <input asp-for="Basic!.PhoneNumber" />
                </div>
                <div id="form-bio" class="input-group">
                    <label asp-for="Basic!.Bio"></label>
                    <textarea asp-for="Basic!.Bio"></textarea>
                </div>
                <div class="form-button">
                    <button type="reset" class="btn btn-gray">Cancel</button>
                    <button type="submit" class="btn btn-theme">Save changes</button>
                </div>
            </div>
        </form>

        <form class="form-adress" method="post" asp-action="UpdateAdressInfo" asp-controller="Account">
            <h5>Adress Info</h5>
            <div class="form-content">
                <div id="form-adressline-1" class="input-group">
                    <label asp-for="Adress!.AdressLine_1!"></label>
                    <input asp-for="Adress!.AdressLine_1!" />
                    <span asp-validation-for="Adress!.AdressLine_1!"></span>
                </div>
                <div id="form-adressline-2" class="input-group">
                    <label asp-for="Adress!.AdressLine_2!"></label>
                    <input asp-for="Adress!.AdressLine_2!" />
                    <span asp-validation-for="Adress!.AdressLine_2!"></span>
                </div>
                <div id="form-postalcode" class="input-group">
                    <label asp-for="Adress!.PostalCode!"></label>
                    <input asp-for="Adress!.PostalCode!" />
                    <span asp-validation-for="Adress!.PostalCode!"></span>
                </div>
                <div id="form-city" class="input-group">
                    <label asp-for="Adress!.City!"></label>
                    <input asp-for="Adress!.City!" />
                </div>
                <div class="form-button">
                    <button type="reset" class="btn btn-gray">Cancel</button>
                    <button type="submit" class="btn btn-theme">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</section>
